<!DOCTYPE html>
<html>
	<head>
		<%= favicon_link_tag 'favicon-gift-box.png' %>
  	<title> Loot-List </title>
  	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
 		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	 	<%= csrf_meta_tags %>					 	 
	</head>

	<body class="background-image responsive">

		<%= render "layouts/header" %>	

		<% flash.each do |key, msg| %>
   		<p class="<%= key %>"><%= msg %></p>
 		<% end %>

			<div class="yield">
				<%= yield %>
			</div>

	</body>

   <footer>
   	<%= render "layouts/footer" %>	
   </footer>

</html>
